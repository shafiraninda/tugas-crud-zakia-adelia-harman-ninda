<!DOCTYPE html>
<html lang="en">
    <%- include('partial/head') %>
<body>
    <%- include('partial/navbar') %>
    <div class="container-fluid">
        <h1>Edit Entry</h1>
        <div class="container-fluid">
            <form action="/edit?id=<%= data.id %>" method="POST">
                <div class="mb-3">
                  <label for="exampleInputName" class="form-label">Name</label>
                  <input type="name" class="form-control" name="name" value="<%= data.name %>">
                </div>
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Email Address</label>
                    <input type="email" class="form-control" name="email" aria-describedby="emailHelp" value="<%= data.email %>">
                  </div>
                  <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" value="<%= data.hashedPassword %>">
                  </div>
                <button class="btn btn-primary">Register</button>
              </form>
        </div>
    </div>
</body>
</html>